{% schema %}
{
  "name": "Collection Product 1",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
  {
    "type": "collection",
    "id": "collection",
    "label": "Featured collection"
  },
  {
    "type": "range",
    "id": "total_products",
    "min": 1,
    "max": 16,
    "step": 1,
    "label": "Total Products",
    "default": 16
  },
  {
    "type": "select",
    "id": "container_shape",
    "options": [
      { 
        "value": "rectangle",
        "label": "Rectangle"
      },
      {
        "value": "square",
        "label": "Square"
      },
      {
        "value": "circle",
        "label": "Circle"
      }
    ],
    "default": "rectangle",
    "label": "Product Contaienr Shape"
  },
  {
    "type": "select",
    "id": "image_fit",
    "options": [
      { 
        "value": "cover",
        "label": "Cover"
      },
      {
        "value": "contain",
        "label": "Contain"
      }
    ],
    "default": "contain",
    "label": "Product Image Fit"
  },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#EDEFF5"
    },
    {
      "type": "range",
      "id": "opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Opacity",
      "default": 100 
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": true
    },
    {
      "type": "select",
      "id": "xxl_col",
      "options": [
      {
